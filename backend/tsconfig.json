{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "testR2.ts"],
  "exclude": ["node_modules", "dist"]
}
